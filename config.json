{
   "ports": {
      "http"  : 2343,
      "https" : 3456
   },
   "types": {
      "css"    : {
         "dirs": ["styles"],
         "type": "text/css"
      },
      "js": {
         "dirs": ["scripts"],
         "type": "application/javascript"
      },
      "ico": {
         "dirs": ["icons"],
         "type": "image/x-icon"
      },
      "jpg": {
         "dirs": ["images"],
         "type": "image/jpeg"
      },
      "png": {
         "dirs": ["images", "icons"],
         "type": "image/png"
      },
      "svg": {
         "dirs": ["images", "icons"],
         "type": "image/svg+xml"
      }
   },
   "host" : "localhost" 
}
