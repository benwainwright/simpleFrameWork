{
   "dirs": {
      "templates" : "pages/templates",
      "handlers"  : "pages/handlers",
      "partials"  : "pages/partials",
      "resources" : "resources"
   },
   "ports": {
      "http"  : 80,
      "https" : 443
   },
   "types": {
      "css"    : {
         "dirs"   : ["styles"],
         "type"   : "text/css",
         "expires": 604800
      },
      "js": {
         "dirs"   : ["scripts"],
         "type"   : "application/javascript",
         "expires": 604800
      },
      "ico": {
         "dirs"   : ["images"],
         "type"   : "image/x-icon",
         "expires":604800
      },
      "jpg": {
         "dirs"   : ["images"],
         "type"   : "image/jpeg",
         "expires": 604800
      },
      "png": {
         "dirs"   : ["images"],
         "type"   : "image/png",
         "expires": 604800
      },
      "svg": {
         "dirs"   : ["images"],
         "type"   : "image/svg+xml",
         "expires": 604800
      },
      "map": {
         "dirs": ["scriptmaps"],
         "type": "application/json",
         "mode": "dev"
      }
   },
   "host" : "localhost" 
}
